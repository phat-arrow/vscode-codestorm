{
  "name": "vscode-codestorm",
  "displayName": "CodeStorm",
  "version": "0.2.2",
  "description": "VSCode extension that replicates several productivity features of WebStorm",
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -watch -p ./"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phat-arrow/vscode-codestorm.git"
  },
  "keywords": [
    "vscode",
    "webstorm",
    "extension",
    "productivity"
  ],
  "publisher": "PhatArrow",
  "icon": "icons/extension-icon.png",
  "author": "Justin Schwartzenberger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phat-arrow/vscode-codestorm/issues"
  },
  "homepage": "https://github.com/phat-arrow/vscode-codestorm#readme",
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.52.0"
  },
  "activationEvents": [
    "onCommand:extension.codeStorm.revealInSideBar"
  ],
  "contributes": {
    "configuration": {
      "title": "CodeStorm configuration",
      "properties": {
        "codeStorm.revealInSideBarButton.show": {
          "type": "boolean",
          "default": true,
          "description": "Show the Reveal in Side Bar button in the editor menu"
        }
      }
    },
    "commands": [
      {
        "command": "extension.codeStorm.revealInSideBar",
        "title": "Reveal in Side Bar",
        "icon": {
          "dark": "./icons/target-dark.svg",
          "light": "./icons/target-light.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "extension.codeStorm.revealInSideBar",
          "group": "navigation@100",
          "when": "config.codeStorm.revealInSideBarButton.show"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/node": "14.14.22",
    "@types/vscode": "1.52.0",
    "@typescript-eslint/eslint-plugin": "4.14.0",
    "@typescript-eslint/parser": "4.14.0",
    "eslint": "7.18.0",
    "typescript": "4.1.3",
    "vsce": "1.84.0"
  }
}
